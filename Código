<?php
session_start();

if (!isset($_SESSION['step'])) {
    $_SESSION['step'] = 'welcome';
}

$response = '';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    if (isset($_POST['reset'])) {
        $_SESSION['step'] = 'welcome';
        $response;
    } else {
        $userMessage = isset($_POST['message']) ? trim($_POST['message']) : '';

        switch ($_SESSION['step']) {
            case 'welcome':
                $response = "OlÃ¡! Como posso ajudar vocÃª hoje? EstÃ¡ procurando comprar, alugar ou vender um imÃ³vel?";
                $_SESSION['step'] = 'option';
                break;

            case 'option':
                if (stripos($userMessage, 'comprar') !== false) {
                    $response = "Ã“timo! Para ajudÃ¡-lo melhor, vocÃª pode me dizer a localizaÃ§Ã£o desejada, faixa de preÃ§o e tipo de imÃ³vel que estÃ¡ procurando?";
                    $_SESSION['step'] = 'buy';
                } elseif (stripos($userMessage, 'alugar') !== false) {
                    $response = "Ã“timo! Para ajudÃ¡-lo melhor, vocÃª pode me dizer a localizaÃ§Ã£o desejada, faixa de preÃ§o e tipo de imÃ³vel que estÃ¡ procurando?";
                    $_SESSION['step'] = 'rent';
                } elseif (stripos($userMessage, 'vender') !== false) {
                    $response = "Perfeito! Vamos comeÃ§ar com alguns detalhes sobre o imÃ³vel que vocÃª deseja vender. Poderia fornecer a localizaÃ§Ã£o e o tipo de imÃ³vel?";
                    $_SESSION['step'] = 'sell';
                } else {
                    $response = "Desculpe, nÃ£o entendi. VocÃª estÃ¡ procurando comprar, alugar ou vender um imÃ³vel?";
                }
                break;
                
            case 'buy':
                $response = "Encontrei algumas opÃ§Ãµes que podem te interessar. VocÃª gostaria de vÃª-las?";
                $_SESSION['step'] = 'show_properties';
                break;

            case 'rent':
                $response = "Encontrei algumas opÃ§Ãµes que podem te interessar. VocÃª gostaria de vÃª-las?";
                $_SESSION['step'] = 'show_properties';
                break;

            case 'sell':
                $response = "Obrigado! Vamos prosseguir com a venda. Para agendar uma visita do nosso corretor, poderia me fornecer seu nome, telefone e e-mail?";
                $_SESSION['step'] = 'capture_seller_info';
                break;
            
                case 'show_properties':
                    $response = "Aqui estÃ£o os detalhes do imÃ³vel: ðŸ‘‰ Apartamento moderno, com todas as comodidades, prÃ³ximo a parques e Ã¡reas de lazer, por apenas R$ xxx. Gostaria de agendar uma visita ou saber mais sobre ele?";
                    $_SESSION['step'] = 'schedule_visit';
                    break;
    
                case 'capture_seller_info':
                    $response = "Obrigado! Um de nossos corretores entrarÃ¡ em contato com vocÃª em breve para prosseguir com a venda.";
                    $_SESSION['step'] = 'end';
                    break;
    
                case 'schedule_visit':
                    $response = "Para agendar uma visita, poderia me informar seu nome?";
                    $_SESSION['step'] = 'capture_buyer_info';
                    break;
    
                case 'capture_buyer_info':
                    // Verifica se o nome foi fornecido
                    if (isset($_POST['nome']) && !empty($_POST['nome'])) {
                        // Armazena o nome na sessÃ£o
                        $_SESSION['nome'] = htmlspecialchars($_POST['nome'], ENT_QUOTES, 'UTF-8');
                        $response = "Obrigado, " . $_SESSION['nome'] . "! Um de nossos corretores entrarÃ¡ em contato com vocÃª em breve para agendar a visita.";
                        $_SESSION['step'] = 'end';
                    } else {
                        // Se o nome nÃ£o foi fornecido, solicita novamente
                        $response = "Por favor, poderia me informar seu nome?";
                        $_SESSION['step'] = 'capture_buyer_info';
                    }
                    break;
                
            default:
            $response = "OlÃ¡! Como posso ajudar vocÃª hoje? EstÃ¡ procurando comprar, alugar ou vender um imÃ³vel?";
            $_SESSION['step'] = 'option';
            break;
    }
}
} else {
// Caso o mÃ©todo nÃ£o seja POST
$response = "OlÃ¡! Como posso ajudar vocÃª hoje? EstÃ¡ procurando comprar, alugar ou vender um imÃ³vel?";
$_SESSION['step'] = 'welcome';
}
